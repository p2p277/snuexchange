<div class="container">
  <p>
    <h1>보낸 메시지</h1>
    <ul>
      <% @sending_message.reverse.each do |s| %>
        <li type="none">
          <% if s.sender_destroy == false %>
            <form action="/sendm_detail">
              <input type="hidden" name="sendm_detail" value="<%=s.id%>">
                <% if s.sender_flags == true %>
                  <span style="color: #c8c8c8">
                  From. <%=User.find(s.receiver).name%><br>
                  : <%=s.content%>&nbsp;
                  </span>
                <% else %>
                  From. <%=User.find(s.receiver).name%><br>
                  : <%=s.content%>&nbsp;
                <% end %>
                <br>
                  <input type="submit" class="btn btn-default" value="Detail">
            </form>
            <br>
            <form action="/sendm_delete">
              <input type="hidden" name="sendm_delete" value="<%=s.id%>">
              <input type="submit" class="btn btn-default" value="Delete">
            </form>
          <% else %>
          <% end %>
        </li>
        <br>
      <% end %>
    </ul>
  </p>
</div>
