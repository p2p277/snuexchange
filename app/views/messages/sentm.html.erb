<div class="container">
  <p>
    <h1><%= t :receivemessage %></h1>
    <ul>
      <% @sentm_message.reverse.each do |s| %>
        <li type="none">
          <% if s.receiver_destroy == false %>
            <form action="/sentm_detail">
              <input type="hidden" name="sentm_detail" value="<%=s.id%>">
              <% if s.receiver_flags == true %>
                <span style="color: #c8c8c8">
                From. <%=User.find(s.sender).name%><br>
                : <%=s.content%>&nbsp;
                </span>
              <% else %>
                From. <%=User.find(s.sender).name%><br>
                : <%=s.content%>&nbsp;
              <% end %>
              <br>
              <input type="submit" class="btn btn-default" value="Detail">
            </form>
            <br>
            <form action="/sentm_delete">
              <input type="hidden" name="sentm_delete" value="<%=s.id%>">
              <input type="submit" class="btn btn-default" value="Delete">
            </form>
          <% else %>
          <% end %>
        </li>
        <br>
      <% end %>
    </ul>
  </p>
</div>
