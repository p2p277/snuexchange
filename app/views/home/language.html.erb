<!-- Optional theme -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css" integrity="sha384-aUGj/X2zp5rLCbBxumKTCw2Z50WgIr1vs/PFN4praOTvYXWlVyh2UtNUU0KAUhAX" crossorigin="anonymous">

<!-- Latest compiled and minified JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js" integrity="sha512-K1qjQ+NcF2TYO/eI3M6v8EiNYZfA95pQumfvcVrTHtwQVDG+aHRqLi/ETn2uB+1JqwYqVG3LIvdm9lj6imS/pQ==" crossorigin="anonymous"></script>
<body>
  <div class="container">
    <div class="row">
      <div class="col-md-7">
        <h3>언어교환 </h3>
      </div>
    </div>
  </div>
  <br>

  <div class="container">

    <div class="btn-group">

      <form action="/filtering">

        <select name="learn">
          <li><option value="">배우고 싶은 언어</option>
            <option value="korean">한국어</option>
            <option value="english">영어</option>
            <option value="chinese">중국어</option>
            <option value="spanish">스페인어</option>
        </select>

        <select name="teach">
          <option value="">가르치고 싶은 언어</option>
          <option value="korean">한국어</option>
          <option value="english">영어</option>
          <option value="chinese">중국어</option>
          <option value="spanish">스페인어</option>
        </select>

        <select name="sex">
          <option value="">성별</option>
          <option value="male">남자</option>
          <option value="female">여자</option>
          <option value="default">상관 없음</option>
        </select>

        <input type="submit">

      </form>
    </div>
  </div>

  <div class="container">
    <div class="row">

      <div class="col-md-12"> 

        <div class="panel">
          <div class="panel-body">


            <!--/stories-->
            <% @users.reverse.each do |u| %>

              <br>
              <div class="row">    
                <br>
                <div class="col-md-2 col-sm-3 text-center">
                  <li type="none" class="stroy-img"><%= image_tag(u.avatar.url(:thumb)) %></li>
                </div>
                <div class="col-md-10 col-sm-9">
                  <h3><%=u.name%></h3>
                  <div class="row">
                    <div class="col-xs-9">
                      <p><%=u.brief%></p>

                      <p class="lead">
                        <a href="/home/profile">
                          <button class="btn btn-default">프로필 보기</button>
                        </a>
                      <%= form_tag '/messages_write', method: 'post' %>
                      <input type="hidden" name="id" value="<%=u.id%>">
                      <input type="submit" value="메세지 보내기">
                      </form>


                      <ul class="list-inline">
                        <li><a href="#"><b>Knows:</b> <%=u.language_speak%> (Native) </a>
                        </li><li><a href="#"><b>Learning:</b> <%=u.language_learn%> (Basic) </a></li>
                      </ul>
                    </div>
                    <div class="col-xs-3"></div>
                  </div>
                  <br><br>
                </div>
              </div>
              <hr>
            <% end %>
            <!--/stories-->
          </div>
        </div>
      </div><!--/col-12-->
    </div>
  </div>

  <hr>

  <footer>
    <div class="container">
      <div class="row">
        <div class="col-sm-6">
          <ul class="list-inline">
            <li><i class="icon-facebook icon-2x"></i></li>
            <li><i class="icon-twitter icon-2x"></i></li>
            <li><i class="icon-google-plus icon-2x"></i></li>
            <li><i class="icon-pinterest icon-2x"></i></li>
          </ul>

        </div>
        <div class="col-sm-6">
          <p class="pull-right">Copyright 2015 스누익스체인지</a></p>      
        </div>
      </div>
    </div>
  </footer>
  <!-- script references -->
  <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
  <script src="js/bootstrap.min.js"></script>
</body>
