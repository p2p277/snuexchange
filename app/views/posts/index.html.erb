<h1>Questions</h1>
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Title</th>
      <th>User</th>
      <th>Viewcount</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <%= link_to post_path(post) do %>
            <%= post.title %>
          <% end %>
        </td>
        <td><%= post.user.email %></td>
        <td><%= post.count %></td>
        <td><%= post.flag %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "new", new_post_path %>
