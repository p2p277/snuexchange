
<div class="container">
  <div class="row">
    <div class="col-md-9">

    <h1>Q&A</h1>
    <br>
    
    <table class="table table-striped table-hover qandatable">
      <thead>
        <tr>
          <th width ="600">Title</th>
          <th width = "300">User</th>
          <th width ="50">Viewcount</th>
          
        </tr>
        
      </thead>
      

  
    
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td>
              <%= link_to post_path(post) do %>
                <%= post.title %>
              <% end %>
            </td>
            <td><%= post.user.email %></td>
            <td><%= post.count %></td>
            <td><%= post.flag %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
        <%= link_to "new", new_post_path, :class => "btn btn-primary" %>
    
    </div>
  </div>
</div>


