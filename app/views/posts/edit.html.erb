
<div class="container">
  <div class="row">
<h1 align="center">Edit Post + </h1>
<hr>
<div class="qanda">
    <%= form_for :edit_post, url: post_path, method: :patch do |f| %>
        <%= f.label :title %>
        <%= f.text_field :title, :value => @post.title, :autocomplete => :off, class: "col-md-12 form-control" %>
        <br><br>
        <%= f.label :text %>
        <%= f.text_field :text, :value => @post.text, :autocomplete => :off , class: "col-md-12 form-control", rows: "15"%>
        <br><br>
        <%= f.submit "Save edits", class: " btn btn-primary pull-right" %>
    <% end %>
        </div>
    </div>
</div>